@model EditRoleViewModel

@{
    ViewBag.Title = "Edycja Roli";
}

<h1 style="text-align: center">Edycja Roli</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row justify-content-center">
                <div class="col-sm-10" style="text-align: center">
                    <button type="submit" class="btn btn-primary">Zaktualizuj</button>
                    <a asp-action="ListRoles" class="btn btn-primary">Anuluj</a>
                </div>
            </div>
            <hr />

            <div class="card">
                <div class="card-header">
                    <h3 style="text-align: center">Użytkownicy przypisani do tej roli</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">Brak na ten moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole"
                       asp-route-roleId="@Model.Id" class="btn btn-primary">
                        Dodaj/Usuń użytkowników z roli
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>