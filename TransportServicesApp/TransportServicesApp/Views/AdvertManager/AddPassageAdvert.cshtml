@model TransportServicesApp.Models.Passage

@{
    ViewData["Title"] = "AddPassageAdvert";
}

<h1>Nowa Oferta przewozu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPassageAdvert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityFrom" class="control-label"></label>
                <input asp-for="CityFrom" class="form-control" />
                <span asp-validation-for="CityFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityTo" class="control-label"></label>
                <input asp-for="CityTo" class="form-control" />
                <span asp-validation-for="CityTo" class="text-danger"></span>
            </div>



            <label asp-for="PassageType" class="control-label"></label>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input asp-for="PassageType" class="form-check-input" type="radio" id="passengerRadio" value="Pasażer" onclick="ChangeAdvertType(1)">
                    <label class="form-check-label" for="passengerRadio">Pasażer</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="PassageType" class="form-check-input" type="radio" id="cargoRadio" value="Towar" onclick="ChangeAdvertType(2)">
                    <label class="form-check-label" for="cargoRadio">Towar</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="PassageType" class="form-check-input" type="radio" id="customRadio" value="Niestandardowy" onclick="ChangeAdvertType(0)" checked>
                    <label class="form-check-label" for="customRadio">Niestandardowy</label>
                </div>
            </div>



            <div id="passenger">
                <div class="form-group">
                    <label id="passenger" asp-for="PassengerLimit" class="control-label"></label>
                    <input asp-for="PassengerLimit" class="form-control" value="0" />
                    <span asp-validation-for="PassengerLimit" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="AdditionalBaggage" /> @Html.DisplayNameFor(model => model.AdditionalBaggage)
                    </label>
                </div>
            </div>

            <div id="cargo">
                <div class="form-group">
                    <label asp-for="MaxSize" class="control-label"></label>
                    <input asp-for="MaxSize" class="form-control" />
                    <span asp-validation-for="MaxSize" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxWeight" class="control-label"></label>
                    <input asp-for="MaxWeight" class="form-control" value="0" />
                    <span asp-validation-for="MaxWeight" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/js/site.js"></script>
}