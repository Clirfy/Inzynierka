@model TransportServicesApp.ViewModels.EditUserAccountViewModel

@{
    ViewData["Title"] = "Zarządzanie Kontem";
}

<h1 style="text-align: center">Zarządzanie Kontem</h1>

<hr />
<div class="row justify-content-md-center">
    <div class="col-md-4 ">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p asp-for="UserName" class="control-label" style="text-align: center">Email</p>
                <input asp-for="UserName" class="form-control" style="text-align: center" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="text-align: center">
                @{
                    var imgSrc = String.Format("data:image/gif;base64,{0}", Model.Image);
                }
                <img src="@imgSrc" style="height:300px; width:300px; align-content: center"/>
                <input type="file" asp-for="Image" style="align-content: center"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group" style="text-align: center">
                <input type="submit" value="Zapisz" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
