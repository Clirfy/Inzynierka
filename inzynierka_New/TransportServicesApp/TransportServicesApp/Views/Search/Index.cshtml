@model SearchViewModel

@{
    ViewData["Title"] = "Szukaj";
}


<div class="row mt-4 justify-content-md-center">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h1 style="text-align:center">Szukaj Ogłoszenia</h1>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group text-center">
                        <label asp-for="CityFrom">Miasto Startowe</label>
                        <input id="CityFrom" asp-for="CityFrom" class="form-control" />
                        <span asp-validation-for="CityFrom" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="CityTo">Miasto Docelowe</label>
                        <input id="CityTo" asp-for="CityTo" class="form-control" />
                        <span asp-validation-for="CityTo" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <div class="form-group">
                            <label asp-for="AdvertType" class="control-label">Rodzaj Ogłoszenia</label>
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input asp-for="AdvertType" class="form-check-input" type="radio" id="All" value="All" checked/>
                                    <label class="form-check-label" for="All">Wszystkie</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="AdvertType" class="form-check-input" type="radio" id="Oferta" value="Oferta">
                                    <label class="form-check-label" for="Passage">Oferta</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="AdvertType" class="form-check-input" type="radio" id="Prośba" value="Prośba">
                                    <label class="form-check-label" for="Request">Prośba</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" style="width:100px; font-size:large">Szukaj</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


    <script>
        $("#CityFrom").autocomplete({
            source: '@Url.Action("GetCityFrom", "Search")'
        });
        $('#CityTo').autocomplete({
            source: '@Url.Action("GetCityTo", "Search")'
        })
    </script>


